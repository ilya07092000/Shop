<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet", href="/css/main.css")
        title #{docTitle}
        block styles
    body
        <div class="backdrop"></div>
        header.main-header
            <button id="side-menu-toggle">Menu</button>
            nav.main-header__nav
                ul.main-header__item-list   
                    li.main-header__item
                        a(href="/", class=(path === 'shop' ? 'active' : '')) Shop
                    li.main-header__item
                        a(href="/products", class=(path === 'products' ? 'active' : '')) Products
                    li.main-header__item
                        a(href="/cart", class=(path === 'cart' ? 'active' : '')) Cart
                    li.main-header__item
                        a(href="/orders", class=(path === 'orders' ? 'active' : '')) Orders
                    li.main-header__item
                        a(href="/admin/add-product", class=(path === 'addProduct' ? 'active' : '')) Add product
                    li.main-header__item
                        a(href="/admin/products", class=(path === 'adminProds' ? 'active' : '')) Admin products
            <nav class="mobile-nav">
                <ul class="mobile-nav__item-list">
                    <li class="mobile-nav__item">
                         a(href="/", class=(path === 'shop' ? 'active' : '')) Shop
                    </li>
                    <li class="mobile-nav__item">
                        a(href="/products", class=(path === 'products' ? 'active' : '')) Products
                    </li>
                    <li class="mobile-nav__item">
                        a(href="/cart", class=(path === 'cart' ? 'active' : '')) Cart
                    </li>
                    <li class="mobile-nav__item">
                        a(href="/orders", class=(path === 'orders' ? 'active' : '')) Orders
                    </li>
                    <li class="mobile-nav__item">
                        a(href="/admin/add-product", class=(path === 'addProduct' ? 'active' : '')) Add product
                    </li>
                    <li class="mobile-nav__item">
                        a(href="/admin/products", class=(path === 'adminProds' ? 'active' : '')) Admin products
                        </a>
                    </li>
                </ul>
            </nav>
        block content

        script(src="/js/main.js")